<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Course Management" Height="450" Width="600">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="Search Students:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="textBoxStudentSearch" Width="200" Margin="0,0,0,10"/>

            <DataGrid x:Name="dataGridStudents" AutoGenerateColumns="True" Margin="0,0,0,10"/>

            <TextBlock Text="Search Courses:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="textBoxCourseSearch" Width="200" Margin="0,0,0,10"/>

            <DataGrid x:Name="dataGridCourses" AutoGenerateColumns="True" Margin="0,0,0,10"/>

            <Button Content="Search" Click="Search_Click" Width="100" />
        </StackPanel>
    </Grid>
</Window>
